<%= form_for(:user, url: sessions_path, html: { id: "user-login-form" }) do |f| %>
  <h1 class="text-center">
    Login
  </h1>

  <div class="form-group">
    <h4>
      <%= f.label :title_field, "Email" %>
    </h4>
      <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>
    <h4>
      <%= f.label :password_field, "Password" %>
    </h4>
      <%= f.password_field :password, required: true, id: "user_password_field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Login", class: "btn btn-success btn-lg" %>
    </div>

<% end %>
