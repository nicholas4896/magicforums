<section class="comment-edit-container">

<%= form_for(@comment, url: topic_post_comment_path(@topic, @post, @comment), authenticity_token: true, html: { id: "comment-update-form", multipart: true }) do |f| %>
  <h1 class="text-center">
    Edit Comment
  </h1>

<br>

<div class="form-group">
  <h4 class="text-center"> Comment Image </h4>
  <div id="preview-image">
    <% if @comment.image? %>
      <%= image_tag @comment.image, class: "img-settings img-responsive center-block" %>
    <% end %>
  </div>
</div>

<div class="form-group">
<%= f.file_field :image, id: "post_image_field", class: 'form-control image-uploader' %>
</div>

  <div class="form-group text-center">
    <h4> <%= f.label :text_field, "Body" %> </h4>
    <%= f.text_field :body, id: "comment_body_field", class: 'form-control' %>
  </div>

  <div class="form-group text-center">
    <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
  </div>
<% end %>

</section>
