<div class="comment-container text-center">

  <h1><Comments></h1>

  <% @comments.each do |comment| %>
    <%= image_tag comment.image, class: "img-settings img-responsive center-block" %>

    <h4><%= comment.body %><h4>
      <%= button_to "Edit Comment", edit_topic_post_comment_path(@topic, @post, comment), :method => :get %>
      <%= link_to ('Delete Comment'), topic_post_comment_path(@topic, @post, comment), method: :delete, data: { confirm: "Delete Comment?"}, :class => 'btn btn-primary btn-;g'%>
    </div>
  </div>
<%end%>

<%= button_to "New Comment", new_topic_post_comment_path, :method => :get %>
