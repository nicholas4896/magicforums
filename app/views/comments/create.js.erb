$('.flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")
<% if @comment.persisted? %>
  $('.comment-partial-container').append("<%=j render partial: 'comments/comment', locals: { comment: @comment, post: @comment.post } %>")

  $('.form-container').html("<%=j render partial: 'comments/form', locals: { comment: @new_comment, post: @post } %>")
<% end %>
