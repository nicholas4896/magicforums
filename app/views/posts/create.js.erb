$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")
<% if @post.persisted? %>
  $('#post-partial-container').append("<%=j render partial: 'posts/post', locals: { post: @post, topic: @post.topic  } %>")
  $('#post-form-container').html("<%=j render partial: 'posts/post_form', locals: { post: @new_post, topic: @topic } %>")
<% end %>
