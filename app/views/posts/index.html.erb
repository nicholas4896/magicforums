<div class="post-index-container text-center">
    <h1 class="text-center" /h1><%= @topic.title%>
      <hr class="short-underline">
      <h1>Posts</h1>
      <hr class="short-underline">

    <div id="posts">
      <% @posts.each do |post| %>
      <%= render partial: "posts/post", locals: { post: post, topic: @topic } %>
      <% end %>
    </div>

    <div class="post-form-container">
      <%= render partial: "posts/post_form", locals: { post: @post } %>
    </div>

</div>

<br>
  <div class="text-center">
      <br>
      <%= button_to "Back to Topics", topics_path, :method => :get %>
      <br>
      <%= button_to "Edit Topic", edit_topic_path(@topic), :method => :get %>
      <br>
      <%= button_to "Delete Topic", topic_path(@topic), method: :delete, data: { confirm: "Delete?" } %>
  </div>
